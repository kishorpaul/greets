<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:id="@+id/rel_1"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/t_c_image"
            android:layout_height="100dp"
            android:src="@drawable/welcome"/>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_below="@id/t_c_image"
            android:id="@+id/t_c_text"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/t_c_image"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Welcome to Greets"/>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/dark_grey"
            android:layout_below="@id/t_c_text"
            android:id="@+id/t_c_text2"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/t_c_text"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="normal"
            android:text="Greets is an easy-to-use, Built in India and instand messaginf app for all Indians"
            android:padding="1dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/rel_1"
        android:layout_alignParentBottom="true"
        android:layout_height="match_parent">

        <Button
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:text="Accept &amp; Continue"
            android:background="@drawable/t_c_bg"
            app:backgroundTint="@color/green"
            android:id="@+id/t_c_button"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>