<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/status_relative_layout"
            android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:hint="Find the one!"
            android:padding="5dp"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:drawableStart="@drawable/baseline_person_search_24"
            android:textColorHint="@color/dark_grey"
            android:layout_marginRight="10dp"
            android:background="@drawable/main_search_edit_text"
            android:id="@+id/main_search_edit_text"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:id="@+id/main_status_header"
            android:layout_below="@id/main_search_edit_text"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/main_status_recycler_view"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/main_status_header"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/main_status_recycler_view_emptyText"
            android:layout_height="90dp"
            android:text="No Status to display."
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:layout_below="@id/main_status_header"
            android:textAlignment="center"
            android:gravity="center"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/status_relative_layout"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/messages_constraint_layout"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:id="@+id/main_messages_header"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/main_new_message"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_new_message_icon"
                android:layout_marginTop="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_messages_recycler_view"
            android:layout_margin="10dp"
            android:layout_below="@id/messages_constraint_layout"/>

        <TextView
            android:layout_width="match_parent"
            android:text="No messages to display."
            android:layout_height="match_parent"
            android:id="@+id/main_messages_recycler_view_emptyText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/messages_constraint_layout"/>

    </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>