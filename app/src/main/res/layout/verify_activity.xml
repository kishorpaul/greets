<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/back_ll"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="30dp"
            android:id="@+id/verify_back_button"
            android:background="@color/white"
            android:src="@drawable/ic_back"
            android:layout_height="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/back_ll"
        android:id="@+id/desc_ll"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify your mobile number"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/signIn_verify_desc"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the verification code sent to the mobile number"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/signIn_verify_desc_sub"
            android:textSize="15dp"
            android:textColor="@color/dark_grey"/>

        <TextView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+91 8296687710"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/signIn_verify_desc_mobNum"
            android:textSize="15dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/mob_ll"
        android:gravity="center"
        android:layout_below="@id/desc_ll"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/mob_edit_text_ll"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/signIn_edit_text"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:inputType="number"
                android:textStyle="bold"
                android:hint="Enter Verification Code"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mob_sms_desc_text"
        android:layout_below="@id/mob_ll"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/dark_grey"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:text="By clicking on VERIFY, we will verify the code and take you to main page."/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textStyle="bold"
        android:id="@+id/signIn_verify_button"
        android:textSize="18dp"
        android:layout_below="@id/mob_sms_desc_text"
        android:layout_margin="25dp"
        android:background="@drawable/t_c_bg"
        app:backgroundTint="@color/green"  />
</RelativeLayout>