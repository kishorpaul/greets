<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/close_ll"
        android:layout_margin="5dp"
        android:layout_height="30dp">

        <ImageButton
            android:layout_width="30dp"
            android:background="@color/white"
            android:id="@+id/signIn_close_button"
            android:src="@drawable/baseline_close_24"
            android:layout_height="30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <View
                android:layout_width="15dp"
                android:layout_height="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/black_circle"/>

            <View
                android:layout_width="15dp"
                android:layout_height="2dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/grey_circle"/>

            <View
                android:layout_width="15dp"
                android:layout_height="2dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/grey_circle"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/close_ll"
        android:id="@+id/desc_ll"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your mobile number"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/desc_enterNumText"
            android:textSize="23dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please provide the mobile number for which you will receive a SMS for authentication process."
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/desc_enterNumDescText"
            android:textSize="15dp"
            android:textColor="@color/dark_grey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/mob_ll"
        android:gravity="center"
        android:layout_below="@id/desc_ll"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <com.hbb20.CountryCodePicker
            android:id="@+id/mob_country_picker"
            android:layout_width="wrap_content"
            app:ccp_showFlag="false"
            app:ccp_showNameCode="false"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/mob_edit_text_ll"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/mob_edit_text"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:hint="Enter mobile number"
                android:inputType="number"
                android:background="@null"
                android:padding="5dp"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/dark_grey"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mob_sms_desc_text"
        android:layout_below="@id/mob_ll"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/dark_grey"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:text="By clicking on GET OTP, you will receive a SMS to the entered monbile number."/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="15dp"
        android:textStyle="bold"
        android:text="GET OTP"
        android:textColor="@color/black"
        app:strokeColor="@color/dark_grey"
        app:strokeWidth="1dp"
        android:id="@+id/mob_sendOTP_button"
        android:background="@drawable/layered_button"
        android:layout_below="@id/mob_sms_desc_text"
        android:padding="10dp"
        android:layout_margin="25dp"/>


        <com.razzaghimahdi78.dotsloading.linear.LoadingScaly
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:dots_color="@color/green"
            app:dots_duration="800"
            app:dots_count="6"
            app:dots_size="5dp"
            android:background="@drawable/flag_transparent"
            android:visibility="gone"
            android:id="@+id/signIn_dots_loading"/>

    </RelativeLayout>