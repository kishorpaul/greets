<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/close_ll"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="30dp"
            android:background="@color/white"
            android:id="@+id/signIn_close_button"
            android:src="@drawable/baseline_close_24"
            android:layout_height="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/close_ll"
        android:id="@+id/desc_ll"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your mobile number"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/desc_enterNumText"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please provide the mobile number for which you will receive a SMS for authentication process."
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/desc_enterNumDescText"
            android:textSize="15dp"
            android:textColor="@color/dark_grey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/mob_ll"
        android:gravity="center"
        android:layout_below="@id/desc_ll"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <com.hbb20.CountryCodePicker
            android:id="@+id/mob_country_picker"
            android:layout_width="wrap_content"
            app:ccp_showFlag="false"
            app:ccp_showNameCode="false"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/mob_edit_text_ll"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/mob_edit_text"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:hint="Enter mobile number"
                android:inputType="number"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/dark_grey"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mob_sms_desc_text"
        android:layout_below="@id/mob_ll"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/dark_grey"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:text="By clicking on GET OTP, you will receive a SMS to the entered monbile number."/>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="GET OTP"
    android:textStyle="bold"
    android:textSize="18dp"
    android:id="@+id/mob_sendOTP_button"
    android:layout_below="@id/mob_sms_desc_text"
    android:layout_margin="25dp"
    android:background="@drawable/t_c_bg"
    app:backgroundTint="@drawable/t_c_bg"/>
</RelativeLayout>